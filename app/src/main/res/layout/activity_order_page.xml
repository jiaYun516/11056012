<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderPage">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="60dp"
        android:text="主食"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/foodGroup"
        android:layout_width="150dp"
        android:layout_height="143dp"
        android:layout_marginTop="24dp"
        android:checkedButton="@id/food1"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <RadioButton
            android:id="@+id/food1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="豬排飯"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/food2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="雞排飯"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/food3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="牛排飯"
            android:textSize="20sp" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:text="180元"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/foodGroup"
        app:layout_constraintTop_toTopOf="@+id/foodGroup" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="150元"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textView10"
        app:layout_constraintStart_toEndOf="@+id/foodGroup"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="10dp"
        android:text="200元"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/foodGroup"
        app:layout_constraintStart_toEndOf="@+id/foodGroup" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="35dp"
        android:text="飲料"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foodGroup" />

    <RadioGroup
        android:id="@+id/drinkGroup"
        android:layout_width="166dp"
        android:layout_height="143dp"
        android:layout_marginTop="24dp"
        android:checkedButton="@id/drink1"
        app:layout_constraintStart_toStartOf="@+id/textView13"
        app:layout_constraintTop_toBottomOf="@+id/textView13">

        <RadioButton
            android:id="@+id/drink1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="紅茶"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/drink2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="綠茶"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/drink3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="冬瓜茶   +10元"
            android:textSize="20sp" />

    </RadioGroup>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="甜點"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/drinkGroup"
        app:layout_constraintTop_toBottomOf="@+id/drinkGroup" />

    <CheckBox
        android:id="@+id/desserts1"
        android:layout_width="140dp"
        android:layout_height="46dp"
        android:layout_marginTop="24dp"
        android:text="地瓜球"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/textView14"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <CheckBox
        android:id="@+id/desserts2"
        android:layout_width="140dp"
        android:layout_height="47dp"
        android:text="沙瓦"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/desserts1"
        app:layout_constraintTop_toBottomOf="@+id/desserts1" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="30元"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/desserts1"
        app:layout_constraintStart_toEndOf="@+id/desserts1"
        app:layout_constraintTop_toTopOf="@+id/desserts1" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="10元"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/desserts2"
        app:layout_constraintStart_toEndOf="@+id/desserts2"
        app:layout_constraintTop_toBottomOf="@+id/desserts1" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="60dp"
        android:text="結算"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>